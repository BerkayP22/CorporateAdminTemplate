@{
    ViewData["Title"] = "Change Password";
}

<div class="container-fluid cp-page">

    <div class="cp-wrapper">

        <!-- HEADER -->
        <div class="cp-header mb-3">
            <h2 class="mb-1">Change password</h2>
            <p class="text-muted mb-0">
                Update your account password. A verification code will be sent to your email before changes are applied.
            </p>
        </div>

        <!-- CARD -->
        <div class="cp-card">
            <div class="cp-card-body">

                <!-- ALERT AREA -->
                <div id="cpAlert" class="cp-alert d-none"></div>

                <form id="cpForm" autocomplete="off">

                    <!-- CURRENT PASSWORD -->
                    <div class="mb-3">
                        <label class="form-label">Current password</label>
                        <div class="cp-input-group">
                            <input type="password" class="form-control" id="currentPassword" required />
                            <button type="button" class="btn cp-eye-btn" data-target="currentPassword">
                                <i class="fa-solid fa-eye"></i>
                            </button>
                        </div>
                        <div class="small text-muted">
                            This is the password you are using right now.
                        </div>
                    </div>

                    <!-- NEW PASSWORD -->
                    <div class="mb-3">
                        <label class="form-label">New password</label>
                        <div class="cp-input-group">
                            <input type="password" class="form-control" id="newPassword" required />
                            <button type="button" class="btn cp-eye-btn" data-target="newPassword">
                                <i class="fa-solid fa-eye"></i>
                            </button>
                        </div>

                        <!-- STRENGTH BAR -->
                        <div class="cp-strength mt-2">
                            <div class="cp-strength-bar">
                                <div id="cpStrengthFill"></div>
                            </div>
                            <div id="cpStrengthLabel" class="cp-strength-label small text-muted">
                                Password strength: -
                            </div>
                        </div>

                        <!-- RULES -->
                        <div class="cp-rules mt-2 small">
                            <div class="cp-rule" data-rule="length">
                                <i class="fa-solid fa-circle-xmark"></i>
                                At least 8 characters
                            </div>
                            <div class="cp-rule" data-rule="upper">
                                <i class="fa-solid fa-circle-xmark"></i>
                                At least one uppercase letter
                            </div>
                            <div class="cp-rule" data-rule="lower">
                                <i class="fa-solid fa-circle-xmark"></i>
                                At least one lowercase letter
                            </div>
                            <div class="cp-rule" data-rule="digit">
                                <i class="fa-solid fa-circle-xmark"></i>
                                At least one number
                            </div>
                            <div class="cp-rule" data-rule="special">
                                <i class="fa-solid fa-circle-xmark"></i>
                                At least one special character (!#$%...)
                            </div>
                        </div>
                    </div>

                    <!-- CONFIRM PASSWORD -->
                    <div class="mb-3">
                        <label class="form-label">Confirm new password</label>
                        <div class="cp-input-group">
                            <input type="password" class="form-control" id="confirmPassword" required />
                            <button type="button" class="btn cp-eye-btn" data-target="confirmPassword">
                                <i class="fa-solid fa-eye"></i>
                            </button>
                        </div>
                        <div id="cpMatchInfo" class="small text-muted">
                            Repeat the new password exactly.
                        </div>
                    </div>

                    <!-- FOOTER BUTTONS -->
                    <div class="d-flex justify-content-between align-items-center mt-3">
                        <button type="button" class="btn btn-outline-secondary btn-sm"
                                id="cpCancelBtn">
                            Cancel
                        </button>

                        <!-- type="button" çünkü JS ile ilerliyoruz -->
                        <button type="button" class="btn cp-submit-btn" id="cpSubmitBtn" disabled>
                            <i class="fa-solid fa-lock me-1"></i> Continue & verify by email
                        </button>
                    </div>

                </form>

            </div>
        </div>
    </div>

    <!-- VERIFICATION MODAL -->
    <div class="cp-modal-backdrop d-none" id="cpCodeModal">
        <div class="cp-modal">
            <div class="cp-modal-header">
                <h5 class="mb-0">Email verification</h5>
            </div>
            <div class="cp-modal-body">
                <p class="small mb-2">
                    We have sent a 6-digit verification code to
                    <span class="cp-email-pill" id="cpEmailDisplay">admin@example.com</span>.
                </p>
                <p class="small text-muted mb-3">
                    Enter the code below to confirm your password change.
                </p>

                <label class="form-label">Verification code</label>
                <input type="text" class="form-control mb-1" id="cpCodeInput" maxlength="6" />
                <div id="cpCodeError" class="small text-danger d-none">
                    The code you entered is incorrect. Please try again.
                </div>

                <div class="small text-muted mt-2">
                    Demo: use code <strong>123456</strong> to simulate a valid verification.
                </div>
            </div>
            <div class="cp-modal-footer">
                <button type="button" class="btn btn-outline-secondary btn-sm" id="cpCodeCancelBtn">
                    Cancel
                </button>
                <button type="button" class="btn cp-submit-btn btn-sm" id="cpCodeConfirmBtn">
                    Confirm change
                </button>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script src="~/js/Profile.js"></script>
}
