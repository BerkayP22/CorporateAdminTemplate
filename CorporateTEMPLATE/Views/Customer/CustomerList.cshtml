@{
    ViewData["Title"] = "Customer List";
}

<div class="container-fluid customer-page">

    <!-- HEADER -->
    <div class="customer-header d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">Customers</h2>
            <p class="text-muted mb-0">Manage your company accounts, contacts and statuses.</p>
        </div>

        <div class="d-flex flex-wrap gap-2 align-items-center justify-content-end">

            <!-- SEARCH -->
            <div class="customer-search">
                <i class="fa-solid fa-magnifying-glass"></i>
                <input type="text" class="form-control" placeholder="Search companies..." />
            </div>

            <!-- FILTER -->
            <select class="form-select customer-filter">
                <option selected>All statuses</option>
                <option>Active</option>
                <option>Trial</option>
                <option>Blocked</option>
            </select>

            <!-- ADD CUSTOMER -->
            <button class="btn btn-add-customer">
                <i class="fa-solid fa-building-circle-plus me-2"></i>
                Add Customer
            </button>
        </div>
    </div>


