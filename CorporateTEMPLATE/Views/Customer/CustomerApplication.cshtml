@{
    ViewData["Title"] = "Customer Apps";
}

<div class="container-fluid customer-page">

    <!-- HEADER -->
    <div class="customer-header d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">Customer Applications</h2>
            <p class="text-muted mb-0">
                Track which applications your customers use, since when, and their latest feedback.
            </p>
        </div>

        <div class="d-flex flex-wrap gap-2 align-items-center justify-content-end">

            <!-- SEARCH -->
            <div class="customer-search">
                <i class="fa-solid fa-magnifying-glass"></i>
                <input type="text" class="form-control" placeholder="Search customers or apps..." />
            </div>

            <!-- FILTER HEALTH -->
            <select class="form-select customer-filter">
                <option selected>All health</option>
                <option>Healthy</option>
                <option>At Risk</option>
                <option>Churn Risk</option>
            </select>
        </div>
    </div>


