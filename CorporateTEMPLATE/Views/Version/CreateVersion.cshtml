@{
    ViewData["Title"] = "Create Version";
}

<div class="container-fluid versions-page">

    <!-- HEADER -->
    <div class="versions-header d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">Create Version</h2>
            <p class="text-muted mb-0">
                Define a new version, attach the package and choose target environment.
            </p>
        </div>

        <div class="d-flex gap-2">
            <a asp-controller="VersionControl" asp-action="AllVersions" class="btn btn-outline-secondary btn-sm">
                <i class="fa-solid fa-arrow-left-long me-1"></i>
                Back to versions
            </a>
        </div>
    </div>


    <!-- LAYOUT -->
    <div class="versions-layout create-version-layout">

        <!-- LEFT: MAIN FORM -->
        <div class="versions-main">

            <div class="ver-card">
                <div class="ver-card-body">

                    <form>

                        <!-- APPLICATION & VERSION INFO -->
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="ver-form-group">
                                    <label class="form-label">Application</label>
                                    <select class="form-select">
                                        <option selected>Version Manager</option>
                                        <option>Deployment Monitor</option>
                                        <option>Customer Portal</option>
                                        <option>Incident Tracker</option>
                                        <option>Log Analyzer</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="ver-form-group">
                                    <label class="form-label">Version name</label>
                                    <input type="text" class="form-control" placeholder="v3.5.0" />
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="ver-form-group">
                                    <label class="form-label">Release date</label>
                                    <input type="date" class="form-control" />
                                </div>
                            </div>
                        </div>

                        <!-- ENV & FLAGS -->
                        <div class="row g-3 mt-1">
                            <div class="col-md-6">
                                <div class="ver-form-group">
                                    <label class="form-label">Environment</label>
                                    <div class="d-flex flex-wrap gap-2">
                                        <label class="ver-radio-pill">
                                            <input type="radio" name="env" value="alpha" checked />
                                            <span class="pill-label">Alpha</span>
                                        </label>
                                        <label class="ver-radio-pill">
                                            <input type="radio" name="env" value="beta" />
                                            <span class="pill-label">Beta</span>
                                        </label>
                                        <label class="ver-radio-pill">
                                            <input type="radio" name="env" value="live" />
                                            <span class="pill-label">Live</span>
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="ver-form-group">
                                    <label class="form-label">Flags</label>
                                    <div class="row g-1">
                                        <div class="col-12">
                                            <label class="form-check ver-check">
                                                <input class="form-check-input" type="checkbox" />
                                                <span class="form-check-label">Requires DB migration</span>
                                            </label>
                                        </div>
                                        <div class="col-12">
                                            <label class="form-check ver-check">
                                                <input class="form-check-input" type="checkbox" />
                                                <span class="form-check-label">Breaking changes for API clients</span>
                                            </label>
                                        </div>
                                        <div class="col-12">
                                            <label class="form-check ver-check">
                                                <input class="form-check-input" type="checkbox" />
                                                <span class="form-check-label">Notify all active customers</span>
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- SUMMARY & NOTES -->
                        <div class="row g-3 mt-1">
                            <div class="col-md-6">
                                <div class="ver-form-group">
                                    <label class="form-label">Change summary</label>
                                    <textarea class="form-control" rows="3"
                                              placeholder="Short summary of what changed in this version..."></textarea>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="ver-form-group">
                                    <label class="form-label">Release notes</label>
                                    <textarea class="form-control" rows="3"
                                              placeholder="More detailed notes, bugfix list, migration steps..."></textarea>
                                </div>
                            </div>
                        </div>

                        <!-- FILE UPLOAD -->
                        <div class="row g-3 mt-1">
                            <div class="col-md-7">
                                <div class="ver-form-group">
                                    <label class="form-label">Upload package</label>
                                    <div class="ver-file-upload" id="fileUploadBox">
                                        <div class="icon">
                                            <i class="fa-solid fa-file-zipper"></i>
                                        </div>
                                        <div class="text">
                                            <div class="title">Drop your file here or click to browse</div>
                                            <div class="subtitle">Supported: .zip, .tar.gz, .exe, .msi</div>
                                            <div class="selected-file" id="selectedFileName">No file selected</div>
                                        </div>
                                        <input type="file" id="versionFileInput" />
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-5">
                                <div class="ver-form-group">
                                    <label class="form-label">Deployment notes</label>
                                    <textarea class="form-control" rows="3"
                                              placeholder="Special deployment instructions, if any."></textarea>
                                </div>
                            </div>
                        </div>

                        <!-- FOOTER BUTTONS -->
                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <button type="button" class="btn btn-outline-secondary">
                                Cancel
                            </button>
                            <button type="submit" class="btn btn-primary">
                                <i class="fa-solid fa-cloud-arrow-up me-1"></i>
                                Create version
                            </button>
                        </div>

                    </form>

                </div>
            </div>

        </div>


        <!-- RIGHT: SUMMARY SIDE PANEL -->
        <div class="versions-side">

            <div class="ver-card mb-3">
                <div class="ver-card-header">
                    <h5 class="mb-0">Summary</h5>
                </div>
                <div class="ver-card-body ver-summary-box">
                    <p class="text-muted small mb-2">
                        Use this form to register a new version in the system.
                        After saving, you can:
                    </p>
                    <ul class="small mb-2 ms-3">
                        <li>Attach this version to specific customers.</li>
                        <li>Trigger deployment pipelines.</li>
                        <li>Share release notes with internal teams.</li>
                    </ul>
                    <p class="small text-muted mb-0">
                        Make sure the uploaded package matches the selected environment and migration flags.
                    </p>
                </div>
            </div>

            <div class="ver-card mb-3">
                <div class="ver-card-header">
                    <h5 class="mb-0">Best practices</h5>
                </div>
                <div class="ver-card-body">
                    <ul class="small mb-0 ver-bp-list">
                        <li>Use semantic versioning (e.g., v3.5.0).</li>
                        <li>Always document breaking changes clearly.</li>
                        <li>Keep release notes concise but informative.</li>
                        <li>Mark DB migrations even if minor.</li>
                    </ul>
                </div>
            </div>

        </div>

    </div>

</div>


