@{
    ViewData["Title"] = "All Versions";
}

<div class="container-fluid versions-page">

    <!-- HEADER -->
    <div class="versions-header d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">All Versions</h2>
            <p class="text-muted mb-0">
                Track every release across applications, environments and customers.
            </p>
        </div>

        <div class="d-flex flex-wrap gap-2 align-items-center justify-content-end">

            <!-- APP SELECT -->
            <div class="versions-app-select">
                <label for="appSelect" class="form-label mb-0">Application</label>
                <select id="appSelect" class="form-select form-select-sm">
                    <option value="version-manager" selected>Version Manager</option>
                    <option value="deployment-monitor">Deployment Monitor</option>
                    <option value="customer-portal">Customer Portal</option>
                    <option value="incident-tracker">Incident Tracker</option>
                    <option value="log-analyzer">Log Analyzer</option>
                </select>
            </div>

            <!-- ENV FILTER (dummy şimdilik) -->
            <select class="form-select form-select-sm versions-env-filter">
                <option>All environments</option>
                <option>Alpha</option>
                <option>Beta</option>
                <option>Live</option>
            </select>

            <!-- CREATE VERSION BUTTON -->
            <button class="btn btn-primary btn-sm versions-add-btn">
                <i class="fa-solid fa-plus me-1"></i>
                Create version
            </button>
        </div>
    </div>


    <!-- LAYOUT: LEFT MAIN / RIGHT SIDE -->
    <div class="versions-layout">

        <!-- LEFT MAIN -->
        <div class="versions-main">

            <!-- APP SUMMARY CARD -->
            <div class="ver-card mb-3">
                <div class="ver-card-body">

                    <div class="d-flex flex-wrap justify-content-between align-items-center gap-3">

                        <!-- APP INFO -->
                        <div class="d-flex align-items-center gap-3">
                            <div class="ver-app-icon">
                                <i class="fa-solid fa-code-branch"></i>
                            </div>
                            <div>
                                <div class="ver-app-name" id="selectedAppName">Version Manager</div>
                                <div class="ver-app-code" id="selectedAppCode">APP-VM</div>
                                <div class="ver-app-desc" id="selectedAppDesc">
                                    Centralized version definition and deployment orchestration.
                                </div>
                                <div class="ver-app-meta mt-1">
                                    <span class="ver-app-pill">Backend</span>
                                    <span class="ver-app-pill">Critical</span>
                                </div>
                            </div>
                        </div>

                        <!-- META METRICS -->
                        <div class="ver-meta-grid">
                            <div class="ver-meta-item">
                                <div class="label">Current version</div>
                                <div class="value" id="selectedAppCurrentVersion">v3.4.2</div>
                                <div class="hint text-success">Live · Stable</div>
                            </div>
                            <div class="ver-meta-item">
                                <div class="label">Total releases</div>
                                <div class="value" id="selectedAppTotalReleases">23</div>
                                <div class="hint">Last 2 years</div>
                            </div>
                            <div class="ver-meta-item">
                                <div class="label">Last sold to</div>
                                <div class="value" id="selectedAppCustomer">St Solutions A.Ş.</div>
                                <div class="hint text-muted">Enterprise contract</div>
                            </div>
                            <div class="ver-meta-item">
                                <div class="label">Primary environment</div>
                                <div class="value">
                                    <span class="env-pill env-live">Live</span>
                                </div>
                                <div class="hint text-muted">TR · EU clusters</div>
                            </div>
                        </div>

                    </div>

                </div>
            </div>

            <!-- VERSIONS TABLE -->
            <div class="ver-card">
                <div class="ver-card-header">
                    <div>
                        <h5 class="mb-0">Version history</h5>
                        <small class="text-muted">All deployments for selected application.</small>
                    </div>
                </div>
                <div class="ver-card-body">

                    <div class="table-responsive">
                        <table class="table ver-table mb-0">
                            <thead>
                                <tr>
                                    <th>Version</th>
                                    <th>Release date</th>
                                    <th>Environment</th>
                                    <th>Status</th>
                                    <th>Deployed by</th>
                                    <th>Sold to</th>
                                    <th>Notes</th>
                                </tr>
                            </thead>
                            <tbody>

                                <!-- VERSION MANAGER VERSIONS -->
                                <tr class="version-row" data-app="version-manager">
