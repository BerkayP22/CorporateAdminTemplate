@{
    ViewData["Title"] = "User Management";
}

<div class="container-fluid userlist-page">

    <!-- HEADER -->
    <div class="userlist-header d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">User Management</h2>
            <p class="text-muted mb-0">View, create and manage users in the system.</p>
        </div>

        <div class="d-flex gap-3 align-items-center">

            <!-- Search -->
            <div class="userlist-search">
                <i class="fa-solid fa-magnifying-glass"></i>
                <input type="text" class="form-control" placeholder="Search users..." />
            </div>

            <!-- Add User -->
            <a asp-controller="UserManagement" asp-action="CreateUser" class="btn btn-add-user">
                <i class="fa-solid fa-user-plus me-2"></i>
                Add User
            </a>
        </div>
    </div>

    <!-- WRAPPER (FULL WIDTH) -->
    <div class="userlist-wrapper">

        <div class="userlist-card shadow-sm">
            <div class="userlist-card-body">

                <table class="table userlist-table mb-0">
                    <thead>
                        <tr>
                            <th>User</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Status</th>
                            <th>Last Login</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>

