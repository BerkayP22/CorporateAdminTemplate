@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Login 2";
}

<div class="login2-page">

    <!-- SOL HERO ALANI -->
    <section class="login2-hero">
        <div class="login2-hero-inner">
            <span class="login2-badge">
                <i class="fa-solid fa-shield-halved me-1"></i>
                Secure Admin Access
            </span>

            <h2>Manage your products, users and versions in one place.</h2>

            <p>
                Keep track of releases, customer environments and system health with a clean,
                centralized dashboard experience.
            </p>

            <ul class="login2-list">
                <li>
                    <i class="fa-solid fa-circle-check"></i>
                    Real-time monitoring and logs
                </li>
                <li>
                    <i class="fa-solid fa-circle-check"></i>
                    Version control for all environments
                </li>
                <li>
                    <i class="fa-solid fa-circle-check"></i>
                    Role-based secure access
                </li>
            </ul>
        </div>
    </section>

    <!-- SAĞ FORM ALANI -->
    <section class="login2-form-area">
        <div class="login2-card shadow-sm">

            <div class="login2-card-header mb-3">
                <div class="login2-logo">
                    <i class="fa-solid fa-code-branch"></i>
                </div>
                <div>
                    <h3 class="mb-1">Sign in</h3>
                    <p class="mb-0 text-muted">Use your corporate credentials</p>
                </div>
            </div>

            <form>
                <!-- EMAIL -->
                <div class="mb-3">
                    <label class="form-label">Email address</label>
                    <div class="input-group login-input-group">
                        <span class="input-group-text">
                            <i class="fa-solid fa-envelope"></i>
                        </span>
                        <input type="email" class="form-control" placeholder="you@company.com" />
                    </div>
                </div>

                <!-- PASSWORD -->
                <div class="mb-2">
                    <label class="form-label d-flex justify-content-between align-items-center">
                        <span>Password</span>
                        <a href="#" class="small text-muted forgot-link">Forgot password?</a>
                    </label>
                    <div class="input-group login-input-group">
                        <span class="input-group-text">
                            <i class="fa-solid fa-lock"></i>
                        </span>
                        <input type="password" class="form-control" placeholder="••••••••" />
                    </div>
                </div>

                <!-- REMEMBER + DEVICE -->
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="rememberMe2">
                        <label class="form-check-label small" for="rememberMe2">
                            Remember me
                        </label>
                    </div>
                    <span class="small text-muted">
                        <i class="fa-solid fa-laptop me-1"></i>Corporate device
                    </span>
                </div>

                <!-- LOGIN BUTTON -->
                <button type="submit" class="btn btn-login2 w-100 mb-3">
                    <i class="fa-solid fa-right-to-bracket me-2"></i>
                    Sign in
                </button>

                <!-- ALT BİLGİ -->
                <p class="text-center small mb-0 text-muted">
                    Need access?
                    <a asp-controller="Auth" asp-action="Register2" class="login2-link">Create One!</a>
                </p>
            </form>

        </div>
    </section>

</div>
