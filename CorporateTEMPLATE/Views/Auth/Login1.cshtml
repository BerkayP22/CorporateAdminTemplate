@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Login";
}

<div class="login-page">

    <!-- Hafif hareketli arkaplan -->
    <div class="login-bg-layer"></div>

    <!-- ORTA KART -->
    <div class="login-card shadow-sm">
        <div class="login-card-header text-center mb-3">
            <div class="logo-circle mb-3">
                <i class="fa-solid fa-code-branch"></i>
            </div>
            <h3 class="mb-1">Welcome back</h3>
            <p class="text-muted mb-0">Sign in to access your dashboard</p>
        </div>

        <form>
            <!-- EMAIL -->
            <div class="mb-3">
                <label class="form-label">Email address</label>
                <div class="input-group login-input-group">
                    <span class="input-group-text">
                        <i class="fa-solid fa-envelope"></i>
                    </span>
                    <input type="email" class="form-control" placeholder="you@example.com" />
                </div>
            </div>

            <!-- PASSWORD -->
            <div class="mb-2">
                <label class="form-label d-flex justify-content-between align-items-center">
                    <span>Password</span>
                    <a href="#" class="small text-muted forgot-link">Forgot password?</a>
                </label>
                <div class="input-group login-input-group">
                    <span class="input-group-text">
                        <i class="fa-solid fa-lock"></i>
                    </span>
                    <input type="password" class="form-control" placeholder="••••••••" />
                </div>
            </div>

            <!-- REMEMBER ME -->
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="rememberMe">
                    <label class="form-check-label small" for="rememberMe">
                        Remember me
                    </label>
                </div>
            </div>

            <!-- LOGIN BUTTON -->
            <button type="submit" class="btn btn-login w-100 mb-3">
                <i class="fa-solid fa-right-to-bracket me-2"></i>
                Sign in
            </button>

            <!-- OR DIVIDER -->
            <div class="login-divider my-3">
                <span>or continue with</span>
            </div>

            <!-- SOCIAL BUTTONS -->
            <div class="d-flex gap-2 mb-3">
                <button type="button" class="btn btn-social flex-fill">
                    <i class="fa-brands fa-google me-2"></i>
                    Google
                </button>
                <button type="button" class="btn btn-social flex-fill">
                    <i class="fa-brands fa-github me-2"></i>
                    GitHub
                </button>
            </div>

            <!-- FOOTER TEXT -->
            <p class="text-center small mb-0 text-muted">
                Don't have an account?
                <a asp-controller="Auth" asp-action="Register1" class="register-link">Create One!</a>
            </p>
        </form>
    </div>

</div>
