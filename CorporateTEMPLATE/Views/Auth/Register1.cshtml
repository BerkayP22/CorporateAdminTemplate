@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Register";
}

<div class="login-page">

    <!-- Arka plan layer -->
    <div class="login-bg-layer"></div>

    <!-- ORTA KART -->
    <div class="login-card shadow-sm">
        <div class="login-card-header text-center mb-3">
            <div class="logo-circle mb-3">
                <i class="fa-solid fa-user-plus"></i>
            </div>
            <h3 class="mb-1">Create an account</h3>
            <p class="text-muted mb-0">Set up your access to the dashboard</p>
        </div>

        <form>
            <!-- FULL NAME -->
            <div class="mb-3">
                <label class="form-label">Full name</label>
                <div class="input-group login-input-group">
                    <span class="input-group-text">
                        <i class="fa-solid fa-user"></i>
                    </span>
                    <input type="text" class="form-control" placeholder="John Doe" />
                </div>
            </div>

            <!-- EMAIL -->
            <div class="mb-3">
                <label class="form-label">Email address</label>
                <div class="input-group login-input-group">
                    <span class="input-group-text">
                        <i class="fa-solid fa-envelope"></i>
                    </span>
                    <input type="email" class="form-control" placeholder="you@example.com" />
                </div>
            </div>

            <!-- PASSWORD -->
            <div class="mb-3">
                <label class="form-label">Password</label>
                <div class="input-group login-input-group">
                    <span class="input-group-text">
                        <i class="fa-solid fa-lock"></i>
                    </span>
                    <input type="password" class="form-control" placeholder="••••••••" />
                </div>
            </div>

            <!-- CONFIRM PASSWORD -->
            <div class="mb-3">
                <label class="form-label">Confirm password</label>
                <div class="input-group login-input-group">
                    <span class="input-group-text">
                        <i class="fa-solid fa-lock"></i>
                    </span>
                    <input type="password" class="form-control" placeholder="••••••••" />
                </div>
            </div>

            <!-- TERMS -->
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="acceptTerms">
                    <label class="form-check-label small" for="acceptTerms">
                        I accept the terms & conditions
                    </label>
                </div>
            </div>

            <!-- REGISTER BUTTON -->
            <button type="submit" class="btn btn-login w-100 mb-3">
                <i class="fa-solid fa-user-plus me-2"></i>
                Create account
            </button>

            <!-- OR DIVIDER -->
            <div class="login-divider my-3">
                <span>or sign up with</span>
            </div>

            <!-- SOCIAL BUTTONS -->
            <div class="d-flex gap-2 mb-3">
                <button type="button" class="btn btn-social flex-fill">
                    <i class="fa-brands fa-google me-2"></i>
                    Google
                </button>
                <button type="button" class="btn btn-social flex-fill">
                    <i class="fa-brands fa-github me-2"></i>
                    GitHub
                </button>
            </div>

            <!-- FOOTER TEXT -->
            <p class="text-center small mb-0 text-muted">
                Already have an account?
                <a asp-controller="Auth" asp-action="Login1" class="register-link">Sign in</a>
            </p>
        </form>
    </div>

</div>
