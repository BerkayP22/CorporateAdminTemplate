@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Register 2";
}

<div class="login2-page">

    <!-- SOL HERO ALANI -->
    <section class="login2-hero">
        <div class="login2-hero-inner">
            <span class="login2-badge">
                <i class="fa-solid fa-users-gear me-1"></i>
                Team & Role Management
            </span>

            <h2>Create admin accounts for your team in minutes.</h2>

            <p>
                Set up secure access for your developers, managers and support staff
                with role-based permissions and environment-aware controls.
            </p>

            <ul class="login2-list">
                <li>
                    <i class="fa-solid fa-circle-check"></i>
                    Fine-grained role permissions
                </li>
                <li>
                    <i class="fa-solid fa-circle-check"></i>
                    Environment-based access rules
                </li>
                <li>
                    <i class="fa-solid fa-circle-check"></i>
                    Centralized audit & activity logs
                </li>
            </ul>
        </div>
    </section>

    <!-- SAĞ FORM ALANI -->
    <section class="login2-form-area">
        <div class="login2-card shadow-sm">

            <div class="login2-card-header mb-3">
                <div class="login2-logo">
                    <i class="fa-solid fa-user-plus"></i>
                </div>
                <div>
                    <h3 class="mb-1">Create an account</h3>
                    <p class="mb-0 text-muted">Provide basic details to get started</p>
                </div>
            </div>

            <form>
                <!-- FULL NAME -->
                <div class="mb-3">
                    <label class="form-label">Full name</label>
                    <div class="input-group login-input-group">
                        <span class="input-group-text">
                            <i class="fa-solid fa-user"></i>
                        </span>
                        <input type="text" class="form-control" placeholder="Jane Doe" />
                    </div>
                </div>

                <!-- EMAIL -->
                <div class="mb-3">
                    <label class="form-label">Work email</label>
                    <div class="input-group login-input-group">
                        <span class="input-group-text">
                            <i class="fa-solid fa-envelope"></i>
                        </span>
                        <input type="email" class="form-control" placeholder="you@company.com" />
                    </div>
                </div>

                <!-- PASSWORD -->
                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <div class="input-group login-input-group">
                        <span class="input-group-text">
                            <i class="fa-solid fa-lock"></i>
                        </span>
                        <input type="password" class="form-control" placeholder="••••••••" />
                    </div>
                </div>

                <!-- CONFIRM PASSWORD -->
                <div class="mb-3">
                    <label class="form-label">Confirm password</label>
                    <div class="input-group login-input-group">
                        <span class="input-group-text">
                            <i class="fa-solid fa-lock"></i>
                        </span>
                        <input type="password" class="form-control" placeholder="••••••••" />
                    </div>
                </div>

                <!-- TERMS -->
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="acceptTerms2">
                        <label class="form-check-label small" for="acceptTerms2">
                            I agree to the terms & privacy
                        </label>
                    </div>
                </div>

                <!-- REGISTER BUTTON -->
                <button type="submit" class="btn btn-login2 w-100 mb-3">
                    <i class="fa-solid fa-user-plus me-2"></i>
                    Create account
                </button>

                <!-- ALT BİLGİ -->
                <p class="text-center small mb-0 text-muted">
                    Already have an account?
                    <a asp-controller="Auth" asp-action="Login2" class="login2-link">Sign in</a>
                </p>
            </form>

        </div>
    </section>

</div>
